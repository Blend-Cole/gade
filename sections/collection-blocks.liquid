<div id="collection-blocks" class="row">
  <div class="section-title row is-collection-sec">
    <h2>
      <a href="/collections/new">
       {{ section.settings.heading }}
      </a>
    </h2>
  </div>
<div class="collectiondescription">{{section.settings.collectiondesc}}</div>
<div class="collections">
{% for block in section.blocks %}
<div class="desktop-4 tablet-half mobile-half {% if block.settings.showinmobile %} displayinmobile {% else %} nodisplayinmobile {% endif %}">
  <a href="{{block.settings.link}}"><img class="lazyload" data-src="{{block.settings.image | img_url:'original'}}" alt=""></a>
</div>
  {% endfor %}
</div>
</div>
{% schema %}
  {
    "name": "Collection Blocks",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "collectiondesc",
        "label": "Collection Description"        
      }	  
	],
	"blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
		{
          "type": "checkbox",
          "id": "showinmobile",
          "label": "show In mobile?"
        },		
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image for deskopt"
        },
		{
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Image for mobile"
        },       
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }        
      ]
    }
  ],
"presets": [{
    "name": "Collection Blocks",
    "category": "Yuvraj Jain(yuvrajjain.me)",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
  }
{% endschema %}

