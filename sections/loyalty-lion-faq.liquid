              },
              {
                  "value": "4",
                  "label": "4"
              },
              {
                  "value": "5",
                  "label": "5"
              },
              {
                  "value": "6",
                  "label": "6"
              },
              {
                  "value": "7",
                  "label": "7"
              },
              {
                  "value": "8",
                  "label": "8"
              },
              {
                  "value": "9",
                  "label": "9"
              },
              {
                  "value": "10",
                  "label": "10"
              },
              {
                  "value": "11",
                  "label": "11"
              },
              {
                  "value": "12",
                  "label": "12"
              },
              {
                  "value": "13",
                  "label": "13"
              },
              {
                  "value": "14",
                  "label": "14"
              }
          ],
          "default":   "4"
      },
      {
        "type": "header",
        "content": "Visibility"
      },
      {
        "type": "checkbox",
        "id": "guest_vs",
        "label": "Guest",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "user_vs",
        "label": "Logged in",
        "default": true
      }
      ],
      "blocks": [
      {
          "type": "custom",
          "name": "FAQ",
          "settings": [
              {
                "type": "header",
                "content": "Question"
              },
              {
                  "type": "text",
                  "id": "question",
                  "label": "Question"
              },
              {
                "type": "header",
                "content": "Answer"
              },
              {
                  "type": "richtext",
                  "id": "answer",
                  "label": "Answer"
              }                              
          ]         
      }
    ]   
  }
  
  {% endschema %}