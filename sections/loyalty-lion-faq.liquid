{% assign settings_ = section.settings %}
<style>
    .ll-faqs-section {
        order: {{ section.settings.order }};
    }
</style>
  <div class="faq-accordions">
    <h2 class="tiers-title">{{ settings_.header }}</h2>
    {% if settings_.subheading != '' %}<div class="tiers-subheading">{{ settings_.subheading }}</div>{% endif %}      
    <section class="loyaltylion-faqs">
        {% for block in section.blocks %}
            <details>
                <summary>{{ block.settings.question }}</summary>
                {{ block.settings.answer }}
            </details>       
        {% endfor %}
  </section> 
  </div>

  {% schema %}

  {
    "name": "Faq",
    "class": "ll-faqs-section page-width",
    "settings": [
      {
          "type": "text",
          "id": "header",
          "label": "Header"
      },
      {
          "type": "html",
          "id": "subheading",
          "label": "Text",
          "info": "Here you can include custom HTML."
      },
      {
          "type":      "select",
          "id":        "order",
          "label":     "Order",
          "options": [
              {
                  "value": "1",
                  "label": "1"
              },
