{% schema %}
{
    "name": "Yotpo homepage",
	"class":"yotpo-wrapper row sm-d-none",
    "settings": [
      {
          "type": "text",
          "id": "title",
          "label": "Yotpo carousel title",
          "default": "Yotpo carousel"
       }
	],
  "presets": [
    {
      "name": "Yotpo homepage",
      "category": "Reviews"
    }
  ]
}
{% endschema %}
