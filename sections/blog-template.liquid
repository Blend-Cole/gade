{% if settings.breadcrumb %}
<div class="custombreadcrumb">
  <div class="row">
  {% include 'breadcrumb' %}
  </div>
</div>  
{% endif %}
{% include 'blog-top-banner' %}
{% paginate blog.articles by 50 %}
<section class="homepage-blog-1479856147659 index-section" data-section-id="1479856147659">  
  <div class="row d-flex">
    {% for article in blog.articles  %}
    {% include 'article-loop' %}
    {% endfor %}
  </div>
  <div class="clear"></div>
</section>
{% endpaginate %}
{% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
{% comment %}
<section
  class="showindesktop parallax-{{ section.id }} index-section parallax parallax-window no-fouc lazyload is-lipstic-sec"
  data-section-type="parallax-section"
  data-bgset="{% include 'bgset', image: section.settings.image %}"
  data-sizes="auto"
  data-section-id="{{ section.id }}" >

  <article class="row">
    <div class="parallax-content desktop-12 tablet-6 mobile-3">

      <div class="parallax-text lipstick-capture">
        {% unless section.settings.heading == blank %}
          <h2>{{ section.settings.heading | escape }}</h2>
        {% endunless %}
        {%- unless section.settings.subheading == blank -%}
          <small>{{ section.settings.sub-heading}}</small>
          <p>{{ section.settings.subheading }}</p>
          <a class="button" href="{{ section.settings.button_link }}">
            {{ section.settings.button_text }}
          </a>
        {%- endunless -%}
        {% unless section.settings.button_link == blank %}
          <div class="clear"></div>
          <a class="button" href="{{ section.settings.button_link }}">
            {{ section.settings.button_text }}
          </a>
        {% endunless %}
      </div>

      {% if section.settings.image == blank %}
        <div class="onboard plax-placehold">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>
  </article>

</section>
<section
  class="showinmobile parallax-{{ section.id }} index-section parallax parallax-window no-fouc lazyload is-lipstic-sec"
  data-section-type="parallax-section"
  data-bgset="{% include 'bgset', image: section.settings.image_mobile %}"
  data-sizes="auto"
  data-section-id="{{ section.id }}" >

  <article class="row">
    <div class="parallax-content desktop-12 tablet-6 mobile-3">

      <div class="parallax-text lipstick-capture">
        {% unless section.settings.heading == blank %}
          <h2>{{ section.settings.heading | escape }}</h2>
        {% endunless %}
        {%- unless section.settings.subheading == blank -%}
          <small>{{ section.settings.sub-heading}}</small>
          <p>{{ section.settings.subheading }}</p>
          <a class="button" href="{{ section.settings.button_link }}">
            {{ section.settings.button_text }}
          </a>
        {%- endunless -%}       
      </div>

      {% if section.settings.image == blank %}
        <div class="onboard plax-placehold">
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>
  </article>

</section>
{% endcomment %}
<div class="clear" style="clear:both;float:none;"></div>
<style>
  .parallax-{{ section.id }} article {
    display: table;
    height: {{ section.settings.page_height }}px;
    min-height: {{ section.settings.page_height }}px;
  }
  .parallax-{{ section.id }} .parallax-text h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    display: block;
    font-family:'Lato';
  }
  @media screen and (max-width: 500px) {
    .parallax-{{ section.id }} .parallax-text h2 {
