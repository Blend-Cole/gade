    }
  }
  section.parallax-{{ section.id }} .parallax-text h2, section.parallax-{{ section.id }} .parallax-text a h2, section.parallax-{{ section.id }} .parallax-text a:visited h2 {
    color: {{ section.settings.heading_color }};
    margin-bottom:0px;
  }
  section.parallax-{{ section.id }} .parallax-text small, section.parallax-{{ section.id }} .parallax-text a small{
    display:block;margin-bottom:20px;font-family:'Lato';
  }
  @media screen and (max-width: 500px) {
    .parallax-text.lipstick-capture small {
    font-size: 24px;
    color: #fff;
    text-transform: uppercase;
}
  }
  section.parallax-{{ section.id }} .parallax-text p, section.parallax-{{ section.id }} .parallax-text a p{
    margin-bottom:30px;direction:rtl;font-family: 'open_sans_hebrewregular';
  }
  @media screen and (max-width: 500px) {
    section.parallax-{{ section.id }} .parallax-text p, section.parallax-{{ section.id }} .parallax-text a p{
    margin-top:30px;direction:rtl;font-family: 'open_sans_hebrewregular';font-size: 18px;margin-bottom:0px;
  }
  }
  section.parallax-{{ section.id }} .parallax-text a:hover h2 {
    opacity: 0.8;
  }
  .parallax-{{ section.id }} .parallax-text p {
    font-size: {{ section.settings.subheading_font_size }}px;
    font-weight: {{ section.settings.subheading_font_weight }};
    color: {{ section.settings.subheading_color }};
    max-width: 100%;
    margin: 0;
  }
  @media screen and (max-width: 500px) {
    .parallax-{{ section.id }} .parallax-text p {
      font-size: 14px;
    }
  }
  .parallax-{{ section.id }} .parallax-text a.button, .parallax-{{ section.id }} .parallax-text a.button:visited {
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
  }
  .parallax-text a.button:hover {
    opacity: 0.8;
  }
  .no-js .parallax-{{ section.id }} {
    background-image: url('{{ section.settings.image | img_url: '1024x' }}');
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center center !important;
  }
  @media screen and ( min-width: 1220px ) {
    section.parallax-{{ section.id }} {
      background-size: 100% !important;
    }
  }
  @media screen and ( max-width: 1024px ) {
    .parallax-{{ section.id }} {
      background-attachment: scroll !important;
      background-size: cover !important;
    }
  }
  @media screen and ( max-width: 740px ) {
    section.parallax-{{ section.id }} article {
      height: initial;
      min-height: 200px;
    }
  }
  .parallax-content {width:40% !important;}
  .is-article-bx h3 { font-size: 24px; line-height: 1.5; min-height: 70px; }
  .is-article-bx .posted { margin-bottom: 0.5rem; text-align:right!important;}
  .is-article-bx .rte.blogbutton { font-size: 0.9rem; padding: 0.4rem 0; height:auto;}
  .is-article-bx p { font-size: 16px;}
 @media screen and ( max-width: 990px ) { 
  .is-article-bx h3 { font-size: 20px;}
   .single-article { min-height: 410px; }
 }
 @media screen and ( max-width: 768px ) {
    .is-article-bx h3 { min-height: auto; }
   .single-article { min-height: auto; }

 }
</style>
