    #loyalty_box_{{section.id}} h1,h2{
    	font-family: open_sans_hebrewbold;
    }
</style>


{% schema %}
  {
    "name": "Loyalty",
    "settings": [
      {
        "type": "select",
        "id": "display",
        "label": "Should display?",
        "options": [
          {
            "value": "flex",
            "label": "Yes"
          },
          {
            "value": "none",
            "label": "No"
          }
        ]
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image for desktop"
      },
	  {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image for mobile"
      },
      {
        "type": "range",
        "id": "page_height",
        "min": 200,
        "max": 1000,
        "step": 100,
        "label": "Image height",
        "default": 400
      },
      {
        "type": "header",
        "content": "Overlay Heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Image with text overlay"
      },
      {
        "type": "range",
        "id": "heading_font_size",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Heading size",
        "default": 26
      },
      {
        "type": "range",
        "id": "heading_distance_top",
        "min": 12,
        "max": 101,
        "step": 1,
        "unit": "px",
        "label": "Heading distance from top",
        "default": 26
      },
      {
        "type": "select",
        "id": "heading_font_weight",
        "label": "Heading weight",
        "options": [
          {
            "value": "400",
            "label": "Normal"
          },
          {
            "value": "300",
            "label": "Light"
          },
          {
            "value": "700",
            "label": "Bold"
          }
        ]
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Sub heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub-Heading",
        "default": "Sub-Heading"
      },
      {
        "type": "range",
        "id": "subheading_font_size",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Sub heading size",
        "default": 16
      },
      {
        "type": "select",
        "id": "subheading_font_weight",
        "label": "Sub heading weight",
        "options": [
          {
            "value": "400",
            "label": "Normal"
          },
          {
            "value": "300",
            "label": "Light"
          },
          {
            "value": "700",
            "label": "Bold"
          }
        ]
      },
      {
        "type": "color",
        "id": "subheading_color",
        "label": "Text color",
        "default": "#000"
      },
	{
        "type": "header",
        "content": "Overlay Text"
      },
      {
        "type": "textarea",
        "id": "overlay_text",
        "label": "Text",
        "default": "Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story."
      },
      {
        "type": "range",
        "id": "overlay_text_font_size",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Text size",
        "default": 16
      },
      {
        "type": "select",
        "id": "overlay_text_font_weight",
        "label": "Text weight",
        "options": [
          {
            "value": "400",
            "label": "Normal"
          },
          {
            "value": "300",
            "label": "Light"
          },
          {
            "value": "700",
            "label": "Bold"
          }
        ]
      },
      {
        "type": "color",
        "id": "overlay_text_color",
        "label": "Text color",
        "default": "#000"
      }
	],
  "presets": [
      {
        "name": "Loyalty",
        "category": "Image"
      }
    ]
}
{% endschema %}

