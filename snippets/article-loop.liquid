<div class="single-article desktop-6 tablet-3 mobile-3 is-blog-bx">
  <div class="article-content p-3">
    {% if article.image %}
    <a href="{{ article.url }}">
      <img class="lazyload" data-src="{{ article.image | img_url: '800x' }}" alt="{{ article.image.alt }}">
    </a>
    {% endif %}
  </div>
  <div class="article-body  is-article-bx">
    <h3>
      <a href="{{ article.url }}">
        {{ article.title }}
      </a>
    </h3>
    <span class="posted">
      {{ article.published_at | date: "%d-%m-%Y" }}
    </span>
    <div class="clear"></div>
    <div class="rte">
      {% if article.excerpt != blank %}
      {{ article.excerpt }}
      {% else %}
      {{ article.content | strip_html | truncatewords: 16 }}
      {% endif %}
    </div>
    <div class="rte blogbutton"><a href="{{ article.url }}">קראי עוד</a></div>
  </div>
</div>
