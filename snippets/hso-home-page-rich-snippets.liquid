{% if shop.metafields.hello_rich_snippets.home_page_schema_status == "enabled" and request.page_type == "index" %}
    <script id="hello_rich_snippets_home_page" type="application/ld+json">
    {
        "@context" : "http://schema.org",
        "@type" : "Corporation"
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopBrand != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
       	,"brand": "{{shop.metafields.hello_rich_snippets.json_ld.shopBrand}}"
        {%- endif -%}
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopDescription != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"description": "{{shop.metafields.hello_rich_snippets.json_ld.shopDescription}}"
        {%- endif -%}
        
        {%- if shop.name != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"name" : "{{shop.name}}"
        {%- endif -%}
        
        {%- assign shopFoundersString = shop.metafields.hello_rich_snippets.json_ld.shopFounders | join: '' -%}
        {%- if shopFoundersString != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"founders": {{ shop.metafields.hello_rich_snippets.json_ld.shopFounders | json }}
        {%- endif -%}
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopFoundingDate != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"foundingDate": "{{shop.metafields.hello_rich_snippets.json_ld.shopFoundingDate}}"
        {%- endif -%}
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopFoundingLocation != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"foundingLocation": "{{shop.metafields.hello_rich_snippets.json_ld.shopFoundingLocation}}"
        {%- endif -%}
        
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopKnowsAbout != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"knowsAbout": "{{shop.metafields.hello_rich_snippets.json_ld.shopKnowsAbout}}"
        {%- endif -%}
        
        
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopLegalName != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"legalName": "{{shop.metafields.hello_rich_snippets.json_ld.shopLegalName}}"
        {%- endif -%}
        
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.leiCode != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"leiCode": "{{shop.metafields.hello_rich_snippets.json_ld.leiCode}}"
        {%- endif -%}
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.logoUrl != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"logo" : "{{shop.metafields.hello_rich_snippets.json_ld.logoUrl}}"
        {%- endif -%}
        
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.numberOfEmployees != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"numberOfEmployees": "{{shop.metafields.hello_rich_snippets.json_ld.numberOfEmployees}}"
        {%- endif -%}
        
        
       
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.ownershipFundingInfoUrl != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"ownershipFundingInfo": "{{shop.metafields.hello_rich_snippets.json_ld.ownershipFundingInfoUrl}}"
        {%- endif -%}
        
        
        {%- if shop.domain != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"url" : "https://{{shop.domain}}"
        {%- endif -%}
  

        {%- assign socialProfilesString = shop.metafields.hello_rich_snippets.json_ld.socialProfiles | join: '' -%}
        {%- if socialProfilesString != blank -%}
          {% capture newLine %}
		  {% endcapture %}
          {% assign socialProfilesArray = '' | split: '' %}
          {%- for singleLink in shop.metafields.hello_rich_snippets.json_ld.socialProfiles -%}
              {%- if singleLink != blank -%}
              
              {% assign addCommaSingleLink = singleLink | append : ',' | split: ',' %}
              
                  {% assign socialProfilesArray = socialProfilesArray | concat: addCommaSingleLink %}
              {%- endif -%}
            {%- endfor -%}
          
      	,"sameAs" : {{ socialProfilesArray | json }}
        {%- endif -%}
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.shopSlogan != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"slogan": "{{shop.metafields.hello_rich_snippets.json_ld.shopSlogan}}"
        {%- endif -%}
        
        
        {%- assign tickerSymbolString = shop.metafields.hello_rich_snippets.json_ld.tickerSymbol | join: '' -%}
        {%- if tickerSymbolString != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"tickerSymbol": {{ shop.metafields.hello_rich_snippets.json_ld.tickerSymbol | json }}
        {%- endif -%}
        
        
        {%- if shop.metafields.hello_rich_snippets.json_ld.awards != blank -%}
        	{% capture newLine %}
		  	{% endcapture %}
        ,"awards": "{{shop.metafields.hello_rich_snippets.json_ld.awards}}"
        {%- endif -%}
        
        {% capture newLine %}
		{% endcapture %}   
        
    }
    </script>
{% endif %}
