<!-- product listing new only for banners -->
<div class="ci-banner {% if section.settings.show_collection_sidebar %} collection-banner-custom-height{% endif %}">
    {% if product.featured_image %}
  	{% if product.featured_image.alt == '' %}
  	{% else %}
      <a href="{{ product.featured_image.alt }}" title="{{ product.title | escape }}">
    {% endif %}
        <div class="no-reveal showindesktop">
          <img class="lazyload" data-src="{{  product.images[0] | img_url: 'grande' }}" alt="{{ product.title | escape }}">
        </div>
        <div class="no-reveal showinmobile">
          <img class="lazyload" data-src="{{  product.images[1] | img_url: 'grande' }}" alt="{{ product.title | escape }}">
        </div>
      {% if product.featured_image.alt == '' %}
  		{% else %}
  		</a>
  	  {% endif %}
    {%- else -%}
      {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
      {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>