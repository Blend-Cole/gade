  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/ga-de-cosmetics-israel.myshopify.com/collections/configure/101132/edit
{% endcomment %}
{% if collection.metafields.custom_fields["product_gallery"] != blank %}
  <div class="custom-field custom-field__product-gallery custom-field__type--field-collection">
    <h3 class="custom-field--title">Product Gallery</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign gallery_item_array = collection.metafields.custom_fields["gallery_item"] | split: separator %}
      {% assign alt_array = collection.metafields.custom_fields["alt"] | split: separator %}
      {% assign gallery_photos_array = collection.metafields.custom_fields["gallery_photos"] | split: separator %}
      {% assign fc_keys = collection.metafields.custom_fields["product_gallery"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__gallery-item">
            {{ gallery_item_array[index] }}
          </div>
          <div class="fc-field field__alt">
            {{ alt_array[index] }}
          </div>
          <div class="fc-field field__gallery-photos">
            {{ gallery_photos_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}