            <a href="{{block.settings.collection5_other}}">
              <em>{{block.settings.collection5_title}}</em>	
              <figure><img src="{{ block.settings.collection5_image | img_url: 'medium' }}" alt="{{ block.settings.collection5_title }}"></figure>  
            </a>
          </li>            
          {% endif %}            
        </ul>
        <div class="sub-showmenu">
          <div class="col-7 large-img">
            <ul>
              <li>
                {% if block.settings.link1 == blank %}
                <img src="{{ block.settings.nav_image1 | img_url: image_size }}">
                {% else %}
                <a href="{{ block.settings.link1 }}">
                  <img src="{{ block.settings.nav_image1 | img_url: image_size }}">
                </a>
                {% endif %}
              </li>
              <li>
                {% if block.settings.link2 == blank %}
                <img src="{{ block.settings.nav_image2 | img_url: image_size }}">
                {% else %}
                <a href="{{ block.settings.link2 }}">
                  <img src="{{ block.settings.nav_image2 | img_url: image_size }}">
                </a>
                {% endif %}
                {% if block.settings.link3 == blank %}
                <img src="{{ block.settings.nav_image3| img_url: image_size }}">
                {% else %}
                <a href="{{ block.settings.link3 }}">
                  <img src="{{ block.settings.nav_image3 | img_url: image_size }}">
                </a>
                {% endif %}
              </li>
            </ul>
          </div>
          <div class="col-5 menu-list">
            <ul class="collectionmenu1">                
              {% if linklists[block.settings.menu1].links != blank %}
                {% for link in linklists[block.settings.menu1].links %}                   
                <li>
                  <a href="{{ link.url }}">
                    <em>{{ link.title }}</em>               
                  </a>
                </li>                
                {% endfor %}                
              {% endif %}
            </ul>
            <ul class="collectionmenu2">
              {% if linklists[block.settings.menu2].links != blank %}
                {% for link in linklists[block.settings.menu2].links %}                   
